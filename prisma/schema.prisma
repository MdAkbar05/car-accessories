
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  password      String?  // ðŸ‘ˆ added for manual signup
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  reviews       Review[]
  orders        Order[]

  Wishlist Wishlist[]
}


model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}



model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id             String       @id @default(cuid())
  name           String
  description    String?
  specification  String?
  stock          Int           @default(0)
  price          Float
  brand          String?
  model          String?
  engine         String?
  images         String[]      // array of image URLs
  categoryId     String
  category       Category      @relation(fields: [categoryId], references: [id])
  reviews        Review[]      // linked reviews
  soldCount      Int        @default(0)   // number of units sold
  viewCount      Int        @default(0)   // number of times viewed
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Review {
  id         String   @id @default(cuid())
  rating     Int      // e.g. 1â€“5
  comment    String?
  productId  String
  userId     String?
  user       User?     @relation(fields: [userId], references: [id])
  product    Product   @relation(fields: [productId], references: [id])
  createdAt  DateTime  @default(now())
}


model Order {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  products        Json     // store product details + qty here
  totalAmount     Float
  paymentStatus   String   @default("pending")     // pending | paid | failed | refunded
  orderStatus     String   @default("processing")  // processing | shipped | delivered | cancelled
  shippingAddress String
  phone           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}


model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  products Json // store product details here
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId])
}